{{!-- @scf-option  { "targetName": "package.json" } --}}
{{!-- @scf-option  { "appenders": ["./appenders/json-appender"] } --}}

{
  "name": "{{parameters.component}}",
  "version": "1.0.0",
  "description": "{{parameters.componentDescription}}",
  "author": "Grupo Botic√°rio",
  {{#if git.remote.origin.url}}
    "repository": {
      "type": "git",
      "url": "git+{{git.remote.origin.url}}"
    },
    "bugs": {
      "url": "{{git.bugs_url}}"
    },
    "homepage": "{{git.home_url}}"
  {{else}}
    "repository": {
      "type": "git",
      "url": "git+{{parameters.github.repoUrl}}.git"
    },
    "bugs": {
      "url": "{{parameters.github.repoUrl}}/issues"
    },
    "homepage": "{{parameters.github.repoUrl}}#readme"
  {{/if}}
}
